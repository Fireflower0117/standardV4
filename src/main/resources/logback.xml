<?xml version="1.0" encoding="UTF-8" ?>
<configuration>

    <!-- property name="CONSOLE_PATTERN_OLD" value="%d{yyyy-MM-dd HH:mm:ss.SSS} %magenta([%thread]) %highlight([%-3level]) %logger{5} - %msg%n" / -->
    <property name="CONSOLE_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n" />
    <property name="ROLLING_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n" />
    <property name="FILE_NAME" value="D:\\logs\\standardV4\\application.log"/>
    <property name="LOG_NAME_PATTERN" value="D:\\logs\\standardV4\\application-%d{yyyy-MM-dd-HH-mm}.%i.log" /> 
    <!--property name="FILE_NAME" value="//kpsp//logs//application.log" / -->
    <!--property name="LOG_NAME_PATTERN" value="//kpsp//logs//application-%d{yyyy-MM-dd-HH}.%i.log" / --> 
    <property name="MAX_FILE_SIZE" value="10MB" />
    <property name="TOTAL_SIZE" value="30MB" />
    <property name="MAX_HISTORY" value="2" />
    
    <!-- Console appender 설정 -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <Pattern>${CONSOLE_PATTERN}</Pattern>
        </encoder>
    </appender>
    
    <appender name="ROLLING_LOG_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <encoder>
            <pattern>${ROLLING_PATTERN}</pattern>
        </encoder>
        <file>${FILE_NAME}</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_NAME_PATTERN}</fileNamePattern>
            <maxHistory>${MAX_HISTORY}</maxHistory>
            <maxFileSize>${MAX_FILE_SIZE}</maxFileSize>
            <totalSizeCap>${TOTAL_SIZE}</totalSizeCap>
        </rollingPolicy>
    </appender>
 
    
    <logger name="jdbc" level="OFF" additive="false">
        <appender-ref ref="ROLLING_LOG_FILE"/>
    </logger>
    <logger name="jdbc.sqlonly" level="ERROR"> 
        <appender-ref ref="ROLLING_LOG_FILE"/>
    </logger>
    <logger name="jdbc.sqltiming" level="OFF" additive="false" >
        <appender-ref ref="ROLLING_LOG_FILE"/>
    </logger>
    <logger name="jdbc.resultset" level="OFF" additive="false" > 
        <appender-ref ref="ROLLING_LOG_FILE"/>
    </logger>   
    
    <logger name="jdbc.resultsettable" level="ERROR" >  
        <appender-ref ref="ROLLING_LOG_FILE"/>
    </logger>  
     
    <logger name="kr.or.opennote" level="DEBUG" additive="false" > 
        <appender-ref ref="ROLLING_LOG_FILE"/>
    </logger>
     
    <logger name="kps" level="DEBUG" additive="false"> 
        <appender-ref ref="ROLLING_LOG_FILE"/>
    </logger> 
     
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>